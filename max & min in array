#include<stdio.h>
void main()
{
    int i,max,min,n;
    printf("enter array size:");
    scanf("%d",&n);
    int a[n];
    printf("enter array values:");
    for(i=0;i<n;i++)
    {
    scanf("%d",&a[i]);
    }
    max=a[0];
    for(i=1;i<n;i++)
    {
        if(a[i]>max)
         max=a[i];
    }
     printf("max=%d",max);      
    min =a[0];
    for(i=1;i<n;i++)
    {
        if(a[i]<min)
         min=a[i];
    }
     printf("\nmin=%d",min); 
}
